{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["ESNext"],
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
